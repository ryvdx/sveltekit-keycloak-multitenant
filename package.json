{
	"name": "sveltekit-keyloak-multitenant",
	"version": "0.2.2",
	"description": "Multi-tenant authentication and authorization for SvelteKit apps using KeyCloak.",
	"private": false,
	"author": "Mark Sawczuk",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && yarn run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"main": "./dist/keycloakservice.js",
	"types": "./dist/keycloakservice.d.ts",
	"module": "./dist/keycloakservice.js",
	"exports": {
		".": {
			"types": "./dist/keycloakservice.d.ts",
			"require": "./dist/keycloakservice.js",
			"import": "./dist/keycloakservice.js"
		}
	},
	"files": [
		"dist"
	],
	"peerDependencies": {
		"svelte": "^3.54.0"
	},
	"devDependencies": {
		"@rollup/plugin-terser": "^0.4.1",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-node": "^1.2.3",
		"@sveltejs/kit": "^1.5.0",
		"@sveltejs/package": "^2.0.0",
		"@types/jsonwebtoken": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"publint": "^0.1.9",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.2.0"
	},
	"dependencies": {
		"jsonwebtoken": "^9.0.0",
		"yaml": "^2.2.1"
	}
}
